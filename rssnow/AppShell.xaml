<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="rssnow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:rssnow.Views"
    TabBarBackgroundColor="DarkBlue"
    FlyoutBehavior="Disabled">
    
    <TabBar>
        <ShellContent 
            Title="Newspaper"
            ContentTemplate="{DataTemplate local:NewspaperPage}"/>
        <ShellContent 
            Title="RSS Channels"
            ContentTemplate="{DataTemplate local:RssChannelsPage}"/>
        <ShellContent 
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"/>
    </TabBar>
</Shell>
